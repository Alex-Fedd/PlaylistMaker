<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- переопределил цвета для фона, текста, иконок -->
        <item name="colorPrimary">@color/blue_bg</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/thumb_color</item>

    </style>

    <style name="SwitcherIconStyle">
        <item name="trackTint">@color/track_color</item>
        <item name="thumbTint">@color/thumb_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/small_textsize</item>
        <item name="android:paddingVertical">@dimen/padding_vertical_21</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/size_16dp</item>
    </style>


    <style name="Theme.PlaylistMaker" parent="Base.Theme.PlaylistMaker" />
</resources>
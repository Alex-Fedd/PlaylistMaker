<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:padding="4dp"
        app:iconGravity="textStart"
        app:navigationIcon="@drawable/arrow_back"
        app:title="@string/settings_but_text"
        app:titleTextAppearance="@style/ToolbarCustomStyle" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_theme"
        style="@style/SwitcherIconStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/icon_size_24"
        android:text="@string/dark_theme"
        android:thumb="@drawable/knob" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/share_app_button"
        style="@style/SwitcherIconStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/share"
        android:text="@string/share_text"

        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/supp_button"
        style="@style/SwitcherIconStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/support"
        android:text="@string/support_text" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/user_agreement_button"
        style="@style/SwitcherIconStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/arrow_forward"
        android:text="@string/agreement_text" />

</LinearLayout>

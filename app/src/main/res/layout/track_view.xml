<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/size_8dp"
    android:paddingStart="@dimen/size_13dp">

    <ImageView
        android:id="@+id/track_picture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/no_image_placehold"
        tools:src="@drawable/no_image_placehold" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_8dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"
            android:textColor="?attr/colorOnPrimary"
            android:textFontWeight="400"
            android:textSize="@dimen/small_textsize"

            tools:text="track name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:maxLines="1"
                android:textColor="?attr/colorOnSecondary"
                android:textFontWeight="400"
                android:textSize="@dimen/text_11sp"
                android:maxWidth="240dp"
                tools:text="artist name" />

            <ImageView
                android:id="@+id/ellipse_divider"
                android:layout_width="@dimen/size_13dp"
                android:layout_height="@dimen/size_13dp"
                android:layout_gravity="center"
                android:background="@drawable/ellipse_1" />

            <TextView
                android:id="@+id/track_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="?attr/colorOnSecondary"
                android:textFontWeight="400"
                android:textSize="@dimen/text_11sp"
                tools:text="00:00" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/track_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:background="@drawable/arrow_forward" />

</LinearLayout>